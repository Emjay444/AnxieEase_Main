{
  "rules": {
    "devices": {
      "AnxieEase001": {
        "assignment": {
          ".read": "auth != null",
          ".write": "auth != null && (auth.token.admin == true || root.child('devices/AnxieEase001/assignment').val() == null)"
        },
        "current": {
          ".read": "auth != null",
          ".write": true
        },
        "history": {
          "$timestamp": {
            ".read": "auth != null",
            ".write": true,
            ".validate": "newData.hasChildren(['heartRate', 'timestamp'])"
          }
        },
        "metadata": {
          ".read": "auth != null",
          ".write": "auth != null && auth.token.admin == true"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || auth.token.admin == true)",
        ".write": "auth != null && (auth.uid == $userId || auth.token.admin == true)",
        "profile": {
          ".validate": "newData.hasChildren(['name', 'email'])"
        },
        "sessions": {
          "$sessionId": {
            "metadata": {
              ".validate": "newData.hasChildren(['deviceId', 'startTime'])"
            },
            "current": {
              ".validate": "newData.hasChildren(['heartRate', 'timestamp'])"
            },
            "history": {
              "$timestamp": {
                ".validate": "newData.hasChildren(['heartRate', 'timestamp'])"
              }
            }
          }
        },
        "baseline": {
          ".validate": "newData.hasChildren(['baselineHR'])"
        }
      }
    },
    "system": {
      "errors": {
        ".read": "auth != null && auth.token.admin == true",
        ".write": "auth != null"
      },
      "stats": {
        ".read": "auth != null && auth.token.admin == true",
        ".write": "auth != null"
      }
    },
    "health_metrics": {
      "$userId": {
        "$deviceId": {
          "current": {
            ".write": "auth != null && auth.uid == $userId",
            ".read": "auth != null && auth.uid == $userId"
          },
          "history": {
            "$timestamp": {
              ".write": "auth != null && auth.uid == $userId",
              ".read": "auth != null && auth.uid == $userId"
            }
          },
          "hourly_summary": {
            "$hour": {
              ".write": "auth != null && auth.uid == $userId",
              ".read": "auth != null && auth.uid == $userId"
            }
          },
          "alerts": {
            "$timestamp": {
              ".write": "auth != null && auth.uid == $userId",
              ".read": "auth != null && auth.uid == $userId"
            }
          }
        }
      }
    },
    "device_status": {
      "$deviceId": {
        ".write": "auth != null",
        ".read": "auth != null"
      }
    }
  }
}
